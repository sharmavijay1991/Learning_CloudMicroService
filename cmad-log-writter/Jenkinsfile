pipeline {
  agent any
  tools{
    maven 'maven 3.6.1'
  }
  
  stages{
    stage("build"){
      steps{
        echo 'Compiling users app..'
        dir('cmad-log-writer'){
          sh 'mvn compile'
        }
      }
    }
    stage("test"){
      steps{
        echo 'No testcases available'
      }
    }
     stage("package"){
      steps{
        echo 'Packaging user app'
        dir('cmad-log-writer'){
          sh 'mvn  package -DskipTests'
        }
      }
    }
  }
  post{
    always{
      echo 'Writer compilation is complete...'
    }
  }
}
